<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomActivity">

    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:hint="P1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:hint="P2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p1" />

    <TextView
        android:id="@+id/tv_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:hint="P3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p2" />

    <TextView
        android:id="@+id/tv_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:hint="P4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_p5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:hint="P5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p4" />

    <TextView
        android:id="@+id/tv_p6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:hint="P6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p5" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edge"
        android:hint="Notice will be printed here"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_card1"
        android:layout_width="98dp"
        android:layout_height="154dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/tv_notice"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice"
        app:srcCompat="@drawable/edge" />

    <ImageView
        android:id="@+id/iv_card2"
        android:layout_width="98dp"
        android:layout_height="154dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_card3"
        app:layout_constraintStart_toEndOf="@+id/iv_card1"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice"
        app:srcCompat="@drawable/edge" />

    <ImageView
        android:id="@+id/iv_card3"
        android:layout_width="98dp"
        android:layout_height="154dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_notice"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice"
        app:srcCompat="@drawable/edge" />

    <ImageView
        android:id="@+id/iv_card4"
        android:layout_width="98dp"
        android:layout_height="154dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_card1"
        app:srcCompat="@drawable/edge" />

    <ImageView
        android:id="@+id/iv_card5"
        android:layout_width="98dp"
        android:layout_height="154dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_card6"
        app:layout_constraintStart_toEndOf="@+id/iv_card4"
        app:srcCompat="@drawable/edge" />

    <ImageView
        android:id="@+id/iv_card6"
        android:layout_width="98dp"
        android:layout_height="154dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_card3"
        app:srcCompat="@drawable/edge" />
</androidx.constraintlayout.widget.ConstraintLayout>